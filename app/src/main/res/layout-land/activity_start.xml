<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/main_items_bg"
    android:padding="2dp">

    <LinearLayout
        android:id="@+id/explore_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/main_items_bg"
        android:gravity="center">

        <ImageView
            android:id="@+id/explore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/explore"
            android:src="@drawable/training_pic_v" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="@string/explore"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/compete_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/main_items_bg">

        <ImageView
            android:id="@+id/compete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/comptete"
            android:src="@drawable/competition_pic_v"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="@string/comptete"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/affix_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/main_items_bg">

        <ImageView
            android:id="@+id/affix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/affix"
            android:src="@drawable/affixment_pic_v"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="@string/affix"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>